{
    "version": "2.3.2",
    "include": [
        "src/**/*",
        "tests/**/*"
    ],
    "compilerOptions": {
        "baseUrl": "./",
        "moduleResolution": "node",
        "target": "es6",
        "module": "es6",
        "lib": [
            "es6",
            "es7",
            "dom"
        ],
        "typeRoots": [
            "./node_modules/@types",
            "./typings"
        ],
        "jsx": "preserve",
        "noUnusedLocals": true
    },
    "compileOnSave": false
}
